<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/table.css">
    <link rel="stylesheet" href="css/spinner.css">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <script>
        const onchange = (isSend) => {
            isSend = 1
        }
    </script>
    <div class='container'>
        <!-- method="post" action="/api/upload" enctype="multipart/form-data" -->
        <form method="post" action="/api/upload" enctype="multipart/form-data">
            <div class='box'>
                <div class='box-form'>
                    <div class='box-login-tab'></div>
                    <div class='box-login-title'>
                        <div class='i i-login'></div>
                        <h2>Rainbow Table Attack</h2>
                    </div>
                    <div class='box-login'>
                        <div class='fieldset-body' id='login_form'>
                            <button class='b b-form i i-more' title='Mais Informações'></button>
                            <div>
                                <div class='field'>
                                    <div class="file-input">
                                        <input type="file" class="file-upload" id="file" name="hashFile" multiple />
                                        <label for="file-upload">
                                            Hashed Password File
                                            <p class="file-name"></p>
                                        </label>
                                    </div>
                                </div>
                                <div class='field'>
                                    <div class="file-input">
                                        <input type="file" class="file-upload" id="file" name="passwordFile" multiple />
                                        <label for="file-upload">
                                            Hashed Password file
                                            <p class="file-name"></p>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <% var isSend = 0 %>
                            <input type='submit' onclick="onchange(isSend)" id='do_login' value='GET STARTED'
                                title='Get Started' />
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <% console.log(Result) %>
        <% if(Object.keys(Result).length !== 0){  %>
        <div class="table-container">
            <table class="rwd-table">
                <tr>
                    <th>Hash</th>
                    <th>Type</th>
                    <th>Result</th>
                </tr>

                <% for (let index in Result) {  %>
                <% if(index === "Sorry there is no match for this hashes"){ %>
                <tr>
                    <th>Sorry there is no match for this hashes</th>
                </tr>
                <tr>
                    <td>
                        <%= `${Result[[index]]}` %>
                    </td>
                </tr>
                <% } else{%>
                <tr>
                    <td><%= Result[[index]] %> </td>
                    <td>md5</td>
                    <td><%= index %> </td>
                </tr>
                <% }} %>
            </table>
        </div>
        <% } %>
    </div>

</body>

</html>